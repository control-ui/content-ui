{
    "extends": "../../tsconfig.packages.json",
    "include": [
        "src"
    ],
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "jsx": "react-jsx",
        "esModuleInterop": true,
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ESNext"
        ]
    },
    "ts-node": {
        "transpileOnly": true,
        "compilerOptions": {
            "module": "ESNext",
            "esModuleInterop": true
        },
        "esm": true
    }
}
