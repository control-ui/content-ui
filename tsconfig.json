{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ES2020",
        "moduleResolution": "Bundler",
        "useDefineForClassFields": true,
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ESNext"
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "noImplicitAny": false,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "isolatedModules": false,
        "noEmit": true,
        "jsx": "preserve",
        "baseUrl": ".",
        "paths": {
            "@content-ui/input": [
                "packages/input"
            ],
            "@content-ui/input/*": [
                "packages/input/*.tsx"
            ],
            "@content-ui/md": [
                "packages/md"
            ],
            "@content-ui/md/*": [
                "packages/md/*.ts"
            ],
            "@content-ui/md-mui": [
                "packages/md-mui"
            ],
            "@content-ui/md-mui/*": [
                "packages/md-mui/*.tsx"
            ],
            "@content-ui/react": [
                "packages/react"
            ],
            "@content-ui/react/*": [
                "packages/react/*.tsx"
            ],
            "@content-ui/struct": [
                "packages/struct"
            ],
            "@content-ui/struct/*": [
                "packages/struct/*.ts"
            ]
        }
    },
    "include": [
        "jest.config.ts",
        "jest.config-cjs.ts",
        "apps/demo/src",
        "apps/demo/tests",
        "apps/sandbox/src",
        "server/feed/src",
        "packages"
    ]
}
